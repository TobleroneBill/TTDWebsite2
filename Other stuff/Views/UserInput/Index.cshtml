@{
    ViewData["Title"] = "User Input Page";
}

 <div id="Main">
   
        <h1><b>User Details</b></h1>
        <!--Main Content-->
        <div id="UserInputDiv">
            <br>
            <form id="formInput" method="post">
                <!--Each section has a label + input in a div so it stacks nicely-->
                <div id="NameD">
                    <label for="name">
                        Name:
                        <input class="input" id="name" name="name" type="text" for="name" placeholder="Input Name">
                    </label> 
                </div>

                <br>
                <div id="EmailD">
                    <label>Email:
                        <input class="input" id="email" name="email" type="text" for="email" placeholder="Input Email">
                    </label>
                </div>
                <br>
                <div id="CardD">
                    <label>Card:
                        <input class="input" id="card" name="card"  type="text" for="card" placeholder="Input Card Number">
                    </label>
                </div>
                <br>
                <div>
                    <input type="submit" id="submitButton">
                </div>
            </form>
        </div>
    </div>
      <script src="~/js/Scripts.js"></script>